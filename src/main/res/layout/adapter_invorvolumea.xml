<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/d45"
    android:paddingTop="@dimen/d3"
    android:gravity="center_vertical"
    android:background="@color/c2A2D4F"
    android:paddingLeft="@dimen/d8">

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="铜铝三月"
        android:textColor="@color/c6A798E"
        android:layout_alignParentTop="true"
        android:textSize="@dimen/f12"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/d2"
        android:layout_below="@+id/tvName"
        android:paddingBottom="@dimen/d3"
        android:text="1233"
        android:textColor="@color/c9EB2CD"
        android:textSize="@dimen/f14"
        android:textStyle="bold" />

    <View
        android:id="@+id/vline"
        android:layout_width="@dimen/line"
        android:layout_height="@dimen/d30"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/c343657" />
</RelativeLayout>


